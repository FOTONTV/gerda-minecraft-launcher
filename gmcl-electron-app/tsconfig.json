{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./main/*"
      ]
    },
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "types": [
      "@gmcl/runtime/lib/global",
      "@gmcl/runtime/lib/global.module",
      "esbuild-plugin-yaml/dist/yaml"
    ]
  },
  "include": [
    "./*.ts",
    "build",
    "main",
    "plugins"
  ],
  "exclude": [
    "node_modules",
    "../gmcl-runtime"
  ]
}