{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~main/*": [
        "./src/windows/main/*"
      ],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "types": [
      "vite/client",
      "vite-plugin-pwa/client",
      "@gmcl/runtime-api/client",
      "@gmcl/runtime-api/monitorClient"
    ]
  },
  "vueCompilerOptions": {
    "target": 2.7,
    "experimentalSuppressUnknownJsxPropertyErrors": false
  },
  "exclude": [
    "node_modules",
    "../gmcl-runtime-api"
  ]
}